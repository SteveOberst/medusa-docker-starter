# Create a copy of this named .env and fill in the proper values

# Database
POSTGRES_DB=medusa-store
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Medusa backend
JWT_SECRET=supersecret
COOKIE_SECRET=supersecret
STORE_CORS=http://localhost:3000,http://localhost:8000
ADMIN_CORS=http://localhost:9000,http://localhost:7000,http://localhost:3000
AUTH_CORS=http://localhost:9000,http://localhost:3000
NODE_ENV=development
# Set to true/false to control seeding in start.sh (set to false by default unless you add a seed script)
SEED_DB=false

# Storefront
# Do not set MEDUSA_BACKEND_URL here; it can leak the internal host to the browser/admin.
# The storefront container will use MEDUSA_INTERNAL_BACKEND_URL injected via docker-compose.
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_test


# Bootstrap script configuration (optional)
# Override the storefront repository and branch/tag used by scripts/bootstrap.*
STOREFRONT_REPO=https://github.com/medusajs/nextjs-starter-medusa
STOREFRONT_REF=main
# Optionally customize where apps live
BACKEND_DIR=backend
STOREFRONT_DIR=storefront

# Backend initialization
# Command template used by bootstrap to initialize the backend. {dir} is replaced with BACKEND_DIR.
BACKEND_INIT_CMD=npx @medusajs/create-medusa-app@latest {dir}

